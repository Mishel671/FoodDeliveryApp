<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodDeliveryApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BottomMenuStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewTextStyle</item>
        <item name="backgroundTint">@color/bottom_nav_background</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/bottom_nav_item_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_item_selector</item>
    </style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter500</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabBackground">@drawable/tab_item_selector</item>
        <item name="tabGravity">start</item>
        <item name="tabPaddingStart">25dp</item>
        <item name="tabPaddingEnd">25dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabStyle</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/tab_text_active</item>
        <item name="tabTextColor">@color/tab_text_inactive</item>
    </style>

    <style name="TabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/sf_ui_display400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FoodDescriptionText">
        <item name="android:fontFamily">@font/sf_ui_display400</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/food_description</item>
    </style>
</resources>